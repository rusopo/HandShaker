    <body>
           
          <div id="cabecera" class="container">
                    
		          <div id="logo" class="col-md-2">
		          
			          <div class="col-md-12">
			          	<a href="index"><img id="imagen-logo" src="resources/images/handshake.jpg" height="150px" width="150px" /> </a>	
			          </div>
		          
		          
		          </div>
		          
                  <div class="col-md-10">
                  
                  	<div class="col-md-5" id="caja-titulo">
                  	              		
		           		<h1 id="titulo" align = "right">HANDSHAKER</h1>
		           		
		           		<h4 id="subtitulo" align="right">Ponerse de acuerdo, Es Fácil !</h4>
     	                 	
                  	</div>
                  	
                  	<div class="col-md-7">
                  	
	                  		<div id="form-login">
			           	    
			           	    <c:choose>
							<c:when test="${not empty usuario}">
							
							<div class="col-md-5">
							
							</div>
							
							<div class="col-md-7">
							
								<div class="col-md-5" align="right">
									<h4 align="right">( <a style="color:#FFFFFF" href="logout">Salir</a> ) </h4>
								</div>
								
								<div class="col-md-7" align="center">
									
									<img id="foto-index" src="mi_perfil/usuario?id_usuario=${e:forHtmlContent(usuario.id)}" height="100px" width="90px"/>
							 	
							 		<h4 style="color: #FFFFFF"><strong>${e:forHtmlContent(usuario.alias)}</strong></h4>
							 		
							 				
								</div>
							
							</div>
							 						 
							</c:when>
							<c:otherwise>
							
							<div align="right">
				           		<form action="login" id="formularioLogin" class="form-inline" role="form" method="POST">
				           		
				           	      <input type="hidden" id="source" name="source" 
				             	   value="${requestScope['javax.servlet.forward.servlet_path']}"/>
				
								  <div class="form-group">
								    <label class="sr-only" for="exampleInputEmail2">Email address</label>
								    <input type="text" class="form-control" id="name" name="name" placeholder="Alias o nombre de usuario">
								  </div>
								  <div class="form-group">
								    <label class="sr-only" for="exampleInputPassword2">Password</label>
								    <input type="password" class="form-control" id="pass" name="pass" placeholder="Contraseña">
								  </div>
				
								  <button type="submit" name="submit" value="login" class="btn btn-success">Login</button>
							   </form>
						   </div>
						</c:otherwise>
	                   </c:choose>
			           	
			           	</div>
			           	
			           	<c:if test="${empty usuario}">			           				           	
				           	<div id="caja-registrate" align="right">
				           		<h4>Si no estas registrado, <a href="registro" class="btn btn-danger"><span class="glyphicon glyphicon-flash"></span> Registrate!</a></h4>
				           	
				           	</div>
                  		</c:if>
                  	
                  	</div>
                  
		              			          	           	          
            	 </div>
       
	          	                      
          </div>
          
          
          <div id="mi-navbar" class="container">
		           		
           		<nav class="navbar navbar-inverse" role="navigation">
         	         		
