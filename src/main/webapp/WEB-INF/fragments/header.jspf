					        <li ${listaActiva1}><a href="index">Inicio</a></li>
					        
					         <c:choose>
							<c:when test="${not empty usuario}">
								
								<li ${listaActiva2}><a href="mi_perfil?usuario=${usuario.id}">Mi Perfil</a></li>
							</c:when>
							<c:otherwise>
							
								<li ${listaActiva2}><a href="mi_perfil?usuario=0">Mi Perfil</a></li>
							</c:otherwise>
							</c:choose>
					        					        
					        <li ${listaActiva3}><a href="mi_historial">Mi Historial</a></li>
					        <li ${listaActiva4}><a href="mis_ofertas">Mis Ofertas <span class="badge">42</span></a></li>
					  		<c:if test="${usuario.alias eq 'admin'}">
							   <li ${listaActiva5}><a href="administrador">Panel Administración</a></li>
							</c:if>
					        
					      </ul>
					     					     
					    </div><!-- /.navbar-collapse -->

				</nav>
		           	
